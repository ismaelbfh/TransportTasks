<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:background="@android:color/holo_blue_light">
        <ImageButton
            android:src="@android:drawable/ic_menu_revert"
            android:layout_width="55.0dp"
            android:layout_height="42.0dp"
            android:id="@+id/btnAtrasInfor"
            android:background="@android:color/holo_blue_bright" />
        <TextView
            android:text="Informes"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtInformesTitulo"
            android:textSize="30dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="1.5dp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold" />
        <TextView
            android:text="Usuario:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtUsuarioBusca" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="32.5dp"
            android:id="@+id/spUsuariosCascada"
            android:background="@android:color/holo_blue_bright" />
        <TextView
            android:text="Cliente:"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtClientesBuscar"
            android:layout_marginBottom="7.0dp"
            android:layout_marginTop="6.0dp" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="33.5dp"
            android:id="@+id/spClientesCascada"
            android:background="@android:color/holo_blue_bright"
            android:layout_marginBottom="7.0dp" />
        <Button
            android:text="BUSCAR"
            android:layout_width="match_parent"
            android:layout_height="42.0dp"
            android:id="@+id/btnBuscarInforme"
            android:background="@android:color/holo_green_light" />
        <ListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="314.0dp"
            android:id="@+id/listaInformes"
            android:layout_marginTop="0.0dp" />
    </LinearLayout>
</ScrollView>